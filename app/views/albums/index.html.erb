<%= render 'header'%>
<div class="container mt-5 text-center">
<%= search_form_for @q do |f| %>
  <%= f.search_field :tags_name_or_name_cont , placeholder:" Search By Name or Tagname "%>
  <%= f.submit %>
  <% end %>
</div>
<div class="container mt-5 "> 
  <div class="row">  
    <% @albums.each do |album| %>    
      <div class="col-lg-3 mt-3 ">
        <a href="/albums/<%= album.id %>" class="text-decoration-none text-black" > 
          <div class="card " style="width: 13rem;">
            <%= image_tag (album.cover_image )%>
            <div class="card-body">
            <h5 class="card-title">
              <%= album.name  %>                        
            </h5>            
            <h5  class="card-title">
            <%= album.tag_list %>
            </h5>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
<%= render "footer" %>